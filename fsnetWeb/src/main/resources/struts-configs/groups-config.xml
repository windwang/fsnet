<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="groups" extends="struts-default">
		<result-types>
    		<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
	    </result-types>
		<action name="CreateGroup" class="fr.univartois.ili.fsnet.actions.ManageGroups"
			method="create">
			<result name="input">/ErrorGroups.do</result>
			<result name="success" >/SearchGroup.do" </result>
			<result name="failed">CreateGroup</result>
		</action>

		<action name="Groups" class="fr.univartois.ili.fsnet.actions.ManageGroups"
			method="create">
			<result name="success" type="tiles">CreateGroup</result>
		</action>

		<action name="ErrorGroups" class="fr.univartois.ili.fsnet.actions.ManageGroups"
			method="create">
			<result name="success">CreateGroup</result>
		</action>


		<action name="DisplayGroup" class="fr.univartois.ili.fsnet.actions.ManageGroups"
			 method="display" >
			<result name="success" type="tiles">DisplayForModifyGroup</result>
		</action>

		<action name="ErrorModifyGroup" class="fr.univartois.ili.fsnet.actions.ManageGroups"
			 method="display">
			<result name="success">DisplayForModifyGroup</result>
		</action>

		<action name="ModifyGroup" class="fr.univartois.ili.fsnet.actions.ManageGroups"
			 method="modify">
			<result name="input">/ErrorGroups.do</result>
			<result name="toHome">/Home.do</result>
			<result name="success">/SearchGroup.do</result>
			<result name="failed">/ErrorModifyGroup.do</result>
		</action>

		<action name="SwitchStateGroup" 
			class="fr.univartois.ili.fsnet.actions.ManageGroups" method="switchState">
			<result name="success">/SearchGroup.do</result>
			<result name="failed">/SearchGroup.do</result>
		</action>

		<action name="SearchGroup" 
			class="fr.univartois.ili.fsnet.actions.ManageGroups" method="search">
			<result name="success" type="tiles">SearchGroups</result>
			<result name="toHome">/Home.do</result>
		</action>

		<action name="DisplayInformationGroup" 
			class="fr.univartois.ili.fsnet.actions.ManageGroups" method="displayInformationGroup">
			<result name="success" type="tiles">DisplayInformationGroup</result>
		</action>
		<action name="ChangeLogo"
			class="fr.univartois.ili.fsnet.actions.ManageGroups" method="changeLogo">
			<result name="success">/DisplayGroup.do</result>
			<result name="unauthorized" type="redirect">/DisplayGroup.do</result>
		</action>

	</package>
</struts>