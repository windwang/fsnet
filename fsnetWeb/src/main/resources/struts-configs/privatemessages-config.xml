<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd ">

<struts>

	<package name="privatemessages" extends="struts-default">
		<result-types>
    		<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
	    </result-types>
		<action name="Inbox"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="inbox">
			<result name="success" type="tiles">DisplayInbox</result>
		</action>

		<action name="Outbox"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="outbox">
			<result name="success" type="tiles">DisplayOutbox</result>
		</action>

		<action name="DisplayMessage"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="display">
			<result name="input">UnauthorizedOperationException</result>
			<result name="success" type="tiles">DisplayPrivateMessage</result>
		</action>

		<action name="DisplaySentMessage"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="display">
			<result name="input">UnauthorizedOperationException</result>
			<result name="success" type="tiles">DisplaySentMessage</result>
		</action>

		<action name="DisplayCreatePrivateMessage">
			<result type="tiles">CreatePrivateMessage</result>
		</action>

		<action name="CreatePrivateMessage"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="create">
			<result name="input" type="tiles">CreatePrivateMessage</result>
			<result name="success" type="redirectAction">Inbox</result>
			<result name="unauthorized" type="redirectAction">Inbox</result>
		</action>

		<action name="DeletePrivateMessage"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="delete">
			<result name="input">UnauthorizedOperationException</result>
			<result name="success" type="redirectAction">Inbox</result>
		</action>

		<action name="DeleteMultiMessages"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="deleteMulti">
			<result name="success" type="redirectAction">Inbox</result>
		</action>

		<action name="DeleteMultiMessages2"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="deleteMulti2">
			<result name="success" type="redirectAction">Inbox</result>
		</action>

		<action name="DeleteMultiSentMessages"
			class="fr.univartois.ili.fsnet.actions.ManagePrivateMessages" method="deleteMulti">
			<result name="success" type="redirectAction">Outbox</result>
		</action>
	</package>
	
</struts>
